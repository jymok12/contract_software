<h1>Edit Personal Information</h1>
 
<%= form_with(model: @person, local: true) do |form| %>
    <p>
        <%= form.label :customer, "Customer" %><br>
        <%= form.text_field :customer %>
    </p>

    <p>
        <%= form.label :date, "Date" %><br>
        <%= form.text_field :date %>
    </p>

    <p>
        <%= form.label :jobsite, "Job Site" %><br>
        <%= form.text_field :jobsite %>
    </p>

    <p>
        <%= form.label :attn, "ATTN" %><br>
        <%= form.text_field :attn %>
    </p>

    <p>
        <%= form.label :phone, "Tel" %><br>
        <%= form.text_field :phone %>
    </p>

    <p>
        <%= form.label :email, "Email" %><br>
        <%= form.text_field :email %>
    </p>

    <p>
        <%= submit_tag("Re-Submit") %>
    </p>
<% end %>

<%= link_to 'Back', people_path %>